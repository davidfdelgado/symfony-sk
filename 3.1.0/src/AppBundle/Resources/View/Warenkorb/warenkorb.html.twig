{% if index is defined %}
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-shopping-cart"></i>
        <span class="label label-success">{{ index.sWarenkorb|length }}</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">{{ 'Sie haben %total% Leistungen im Warenkorb'|trans({'%total%':index.sWarenkorb|length}, 'AvanzuAdminTheme') }}</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu">
                {% for leistung in index.sWarenkorb if index.sWarenkorb|length > 0 %}
                    <li><!-- start message -->
                        <a href="{{ path('wc_widget', {'messageid': msg.identifier}) }}">
                            <div class="pull-left">
                                {{ macro.avatar(msg.from.avatar, msg.from.username) }}
                            </div>
                            <h4>
                                {{ msg.from.username }}
                                <small><i class="fa fa-clock-o"></i> {{ msg.sentAt|date('d.m.Y H:i') }}</small>
                            </h4>
                            <p>{{ msg.subject }}</p>
                        </a>
                    </li><!-- end message -->
                {% endfor %}
            </ul>
        </li>
        <li class="footer"><a href="{{ path('vb_ticket_auswahl') }}">{{'Leistungen suchen'|trans({}, 'AvanzuAdminTheme')}}</a></li>
    </ul>
{% endif %}