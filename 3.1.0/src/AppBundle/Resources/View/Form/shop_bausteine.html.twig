{% extends '@AppBundle/base.html.twig' %}

{%  block page_content %}

    <section class="content">
        <!-- title row -->
        <div class="row">

            {% if form is defined %}
            <div class="col-xs-7">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <a href="{{ path('shop_bausteine') }}" class="btn btn-success"> zur√ºck zu den Bausteinen</a>
                        <hr>
                        <h3 class="box-title"> Kategorie-Art</h3>
                        <small class="pull-right">ID: {{ form.vars.value.getHId()|default('Neu') }}</small>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    {{ form_start(form, {'attr': {'class': ''}}) }}

                        <div class="box-body">
                            {{ form_row(form._token) }}
                            {{ form_errors(form) }}
                            {{ form_row(form.hArt) }}
                            {{ form_row(form.hName) }}
                            {{ form_row(form.hText) }}
                            {{ form_row(form.hTextEn) }}

                        </div>
                        <div class="box-footer">
                            {{ form_widget(form.save) }}
                            {{ form_widget(form.abort) }}
                        </div>
                     {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
        {% endif %}

        </div>
    </section>


{% endblock %}